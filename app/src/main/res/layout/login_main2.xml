<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    >
    <ImageSwitcher
        android:id="@+id/pre_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/basketball"
        android:scaleType="centerCrop"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="12dp"
            >
            <ImageView
                android:id="@+id/main_logo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/circle_logo"
                android:layout_centerHorizontal="true"
                />
            <android.support.v4.view.ViewPager
                android:id="@+id/pre_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            <com.viewpagerindicator.CirclePageIndicator
                android:id="@+id/pre_indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="14dp"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"
            android:id="@+id/linearLayout2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <Button
                    android:id="@+id/pre_facebook_login"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#344a8b"
                    android:text="페이스북으로 간편 로그인"
                    android:textColor="#ffffff"
                    android:alpha="0.9"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <Button
                    android:id="@+id/pre_signup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="이메일로 가입"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/modern_button"
                    />
                <Button
                    android:id="@+id/pre_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="이메일로 로그인"
                    android:textColor="#ffffff"
                    android:background="@drawable/modern_button_white"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="14dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가입과 함께 박빙의 "
                android:textSize="12sp"
                android:textColor="#ffffff"
                />
            <TextView
                android:id="@+id/privacy_policy_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이용약관"
                android:textSize="12sp"
                android:textColor="#ffffff"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="에 동의하시게 됩니다."
                android:textSize="12sp"
                android:textColor="#ffffff"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>