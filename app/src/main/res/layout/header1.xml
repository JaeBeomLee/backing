<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:orientation="vertical"    android:layout_width="match_parent"    android:layout_height="match_parent">    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="180dp"        android:layout_gravity="center_horizontal">        <ImageView            android:id="@+id/team_background"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:src="@drawable/capetown2"            android:scaleType="centerCrop" />        <LinearLayout            android:id="@+id/linearLayout"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:orientation="vertical"            android:gravity="center"            android:layout_centerVertical="true"            android:layout_centerHorizontal="true">            <TextView                android:id="@+id/header_text_title"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="스포츠 설문 조사"                android:textSize="24dp"                android:textColor="#ffffff" />            <TextView                android:id="@+id/header_text_subtitle"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="(8/16 ~ 9/15)"                android:textSize="15dp"                android:textColor="#ffffff" />            <Button                android:id="@+id/header_btn"                android:layout_width="wrap_content"                android:layout_height="24dp"                android:layout_marginTop="16dp"                android:background="#dd0000ff"                android:text="바로가기"/>        </LinearLayout>    </RelativeLayout></LinearLayout>