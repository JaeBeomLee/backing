<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E8E8">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/tool_bar_matching_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="12dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <fr.ganfra.materialspinner.MaterialSpinner
                    android:id="@+id/matching_search_team"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:ms_multiline="true"
                    app:ms_hint="매칭 진행 팀 선택"
                    android:spinnerMode="dropdown"
                    />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="24dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="경기유형"
                android:textColor="#000000"
                android:textSize="18dp"
                android:layout_marginBottom="12dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                >
                <Button
                    android:id="@+id/matching_search_type_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_disable"
                    android:text="11 : 11"
                    android:textSize="13dp"
                    android:textColor="#aaaaaa"
                    android:stateListAnimator="@null"
                    />
                <Button
                    android:id="@+id/matching_search_type_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="-1dp"
                    android:background="@drawable/button_disable"
                    android:text="5 : 5"
                    android:textSize="13dp"
                    android:textColor="#aaaaaa"
                    android:stateListAnimator="@null"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="24dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시간대"
                android:textColor="#000000"
                android:textSize="18dp"
                android:layout_marginBottom="12dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                >
                <Button
                    android:id="@+id/matching_search_time_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_disable"
                    android:text="전체"
                    android:textSize="13dp"
                    android:textColor="#aaaaaa"
                    android:stateListAnimator="@null"
                    />
                <Button
                    android:id="@+id/matching_search_time_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="-1dp"
                    android:background="@drawable/button_disable"
                    android:text="오전"
                    android:textSize="13dp"
                    android:textColor="#aaaaaa"
                    android:stateListAnimator="@null"
                    />
                <Button
                    android:id="@+id/matching_search_time_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="-1dp"
                    android:background="@drawable/button_disable"
                    android:text="오후"
                    android:textSize="13dp"
                    android:textColor="#aaaaaa"
                    android:stateListAnimator="@null"
                    />
                <Button
                    android:id="@+id/matching_search_time_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="-1dp"
                    android:background="@drawable/button_disable"
                    android:text="저녁"
                    android:textSize="13dp"
                    android:textColor="#aaaaaa"
                    android:stateListAnimator="@null"
                    />
                <Button
                    android:id="@+id/matching_search_time_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="-1dp"
                    android:background="@drawable/button_disable"
                    android:text="새벽"
                    android:textSize="13dp"
                    android:textColor="#aaaaaa"
                    android:stateListAnimator="@null"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="24dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="경기날짜"
                android:textColor="#000000"
                android:textSize="18dp"
                android:layout_marginBottom="12dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <Button
                    android:id="@+id/matching_search_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_disable"
                    android:text="시간 설정하기"
                    android:textSize="13dp"
                    android:textColor="#aaaaaa"
                    android:stateListAnimator="@null"
                    />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/matching_search_finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="24dp"
            android:background="@color/colorPrimary_team"
            android:text="매칭 검색"
            android:textSize="18dp"
            android:textColor="#ffffff"
            />
    </LinearLayout>
    </ScrollView>
</LinearLayout>