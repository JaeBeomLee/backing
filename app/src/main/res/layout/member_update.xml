<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eaeaea"
    >
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
            <android.support.v7.widget.Toolbar
                android:id="@+id/tool_bar_member_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:theme="@style/ThemeOverlay.AppCompat.Light"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
                />
    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                >
                <ImageView
                    android:id="@+id/member_create_cover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@color/colorPrimary"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    android:gravity="center_horizontal">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/member_create_profile"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/circle_emblem"
                            />
                        <RelativeLayout
                            android:id="@+id/member_create_profile_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/member_create_profile"
                            android:layout_alignRight="@+id/member_create_profile"
                            >
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/circle_view_grey"/>
                            <ImageView
                                android:layout_centerInParent="true"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_photo_camera_white"
                                />
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:textSize="15dp"
                        android:id="@+id/member_phone"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginBottom="16dp"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:inputType="number"
                        android:hint="전화번호"
                        android:paddingLeft="12dp"
                        android:background="#ffffff"
                        />

                    <LinearLayout
                        android:id="@+id/member_birth"
                        android:onClick="memberBirth"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal"
                        android:background="#ffffff">

                        <TextView
                            android:id="@+id/member_birth_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="생년월일"
                            android:textColor="#000000"
                            android:textSize="15dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="12dp"/>

                    </LinearLayout>

                    <!--남성 여성 설정 -->
                    <!--man,woman style able, unable 레이아웃이 배경으로적용-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/member_man"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="남성"
                            android:textSize="15dp"
                            android:typeface="sans"
                            android:textColor="#ff5677fa"
                            android:background="@drawable/man_style_unable"
                            android:shadowColor="#00000000"
                            android:stateListAnimator="@null"/>
                        <Button
                            android:id="@+id/member_woman"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="여성"
                            android:textSize="15dp"
                            android:typeface="sans"
                            android:textColor="#e74c3c"
                            android:background="@drawable/woman_style_unable"
                            android:stateListAnimator="@null"/>

                    </LinearLayout>



                    <Button
                        android:id="@+id/member_update_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:text="수정하기"
                        android:textColor="#ffffff"
                        android:textSize="15dp"
                        android:background="@color/colorPrimary" />
                </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
