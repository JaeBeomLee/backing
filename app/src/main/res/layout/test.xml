<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/team_card"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            >
            <ImageView
                android:id="@+id/match_bacground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/capetown2"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:id="@+id/logo_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp">
                <ImageView
                    android:id="@+id/team1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/arsenal_logo"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="vs"
                    android:textSize="30dp"
                    android:textColor="#ffffff"
                    />
                <ImageView
                    android:id="@+id/team2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/manchester_united_logo"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo_notification"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/match_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sun Feb 8, 6:00 pm"
                    android:textColor="#ffffff"/>
                <TextView
                    android:id="@+id/match_local"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="camp-nou"
                    android:textColor="#ffffff"/>

            </LinearLayout>

        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00ffffff"
            >
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00ffffff"
            >
            <android.support.design.widget.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                
                android:alpha="100"
                />
        </android.support.design.widget.AppBarLayout>
</android.support.design.widget.CoordinatorLayout>

    </LinearLayout>

    <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_below="@+id/team_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />




</LinearLayout>
