<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00ffffff"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textColor="#000000"
            android:text="10월"
            android:textSize="16dp"
            android:textStyle="bold"
            android:id="@+id/schedule_sub_month" />
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="4dp"
        android:layout_marginBottom="1dp"
        card_view:cardUseCompatPadding="true"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginRight="16dp">

            <TextView
                android:id="@+id/schedule_date_visual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="10"
                android:textSize="36dp"
                android:textColor="#000000"
                />
            <TextView
                android:id="@+id/schedule_day_visual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="토요일"
                android:textSize="18dp"
                android:textColor="#ef5350"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/schedule_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상대 팀"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="20dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/schedule_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:text="2015년"
                    android:textColor="#434343"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/schedule_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:text="11월"
                    android:textColor="#434343"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/schedule_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:text="12일"
                    android:textColor="#434343"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/schedule_apm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오후 "
                    android:textColor="#434343"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/schedule_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3시 "
                    android:textColor="#434343"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/schedule_minute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30분"
                    android:textColor="#434343"
                    android:textSize="12dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/schedule_stadium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="박빙 전용 구장"
                android:textColor="#434343"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp" >

            <TextView
                android:id="@+id/schedule_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="1 : 1"
                android:textSize="30dp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/schedule_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="WIN"
                android:textSize="13dp"
                android:textColor="#18c37c"
                />
        </LinearLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>