<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
    </style>


    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/dark</item>
        <item name="android:textColorSecondary">@color/dark</item>
        <item name="android:textColorSecondaryInverse">@color/primary_material_light</item>
        <item name="android:textColorPrimaryInverse">@color/primary_material_light</item>
    </style>

    <style name="bacving_theme" parent="@style/Theme.AppCompat.Light.NoActionBar" >
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarWidgetTheme">@color/dark</item>
        <item name="android:textColorPrimary">@color/primary_text_material_light</item>
    </style>

    <style name="bacving_theme_all" parent="@style/Theme.AppCompat.Light.NoActionBar" >
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/primary_text_material_light</item>
    </style>

    <style name="rating" parent="@style/Theme.AppCompat.Light.NoActionBar" >
        <item name="colorPrimary">@color/rateColor</item>
        <item name="colorPrimaryDark">@color/rateColor</item>
        <item name="colorAccent">@color/rateColor</item>
    </style>
    <style name="bacving_theme_team" parent="@style/Theme.AppCompat.Light.NoActionBar" >
        <item name="colorPrimary">@color/colorPrimary_team</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_team</item>
        <item name="colorAccent">@color/colorAccent_team</item>
        <item name="android:textColorPrimary">@color/primary_text_material_light</item>
        <item name="android:colorBackground">@color/background_material_light</item>
        <item name="android:textColorSecondary">@color/secondary_text_material_dark</item>
        <item name="android:textColorSecondaryInverse">@color/secondary_text_material_dark</item>
        <item name="android:textColorPrimaryInverse">@color/primary_material_dark</item>
        <item name="android:actionBarWidgetTheme">@color/dark</item>
    </style>

    <style name="bacving_theme.dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/primary_text_material_light</item>
    </style>

    <style name="grey" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="android:textColorSecondary">@color/grey</item>
    </style>
</resources>
